<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie Vision</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body class="d-flex flex-column h-100">
    <div class="wrapper flex-shrink-0">

      <nav class="navbar navbar-expand navbar-dark bg-dark">
        <div class="container-md">
          <a class="navbar-brand" href="/">
            <img
              src="/images/logo2-inverted.png"
              alt=""
              width="130"
              height="55"
              class="d-inline-block align-text-center"
            /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link fw-normal fs-4 px-3 active" id="home-btn" href="/">home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link fw-normal fs-4 px-3" id="catalog-btn" href="/catalog">catalog</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link fw-normal fs-4 px-3" id="search-btn" href="/">search</a>
                </li>
              </ul>
              </div>
            <div class="">
            <ul class="navbar-nav">
              {{!-- <li class="navbar-nav">
                <a class="nav-link active" href=""> | </a>
              </li> --}}
              {{#if loggedIn}}
                <li class="nav-item">
                  <a class="nav-link active" href="/dashboard">dashboard</a>
                </li>
                <li class="nav-item">
                  <button
                    class="btn btn-outline-danger"
                    id="logout"
                  >logout</button>
                </li>
              {{else}}
                <li class="nav-item">
                  <a class="nav-link active" href="/login">login</a>
                </li>
                <li class="nav-item">
                  <a class="btn btn-outline-info" href="/sign-up">sign-up</a>
                </li>
              {{/if}}
            </ul>
          </div>
        </div>
      </nav>
      <main>
        {{{body}}}
      </main>
    </div>
    <footer class="navbar navbar-expand mt-auto py-3 bg-light">
        <div class="container-fluid">
        <p class="text-muted">Made with &hearts; by 
          <a class="link" href="https://www.github.com/bradystafford" target="_blank">Brady Stafford</a>, 
          <a class="link" href="https://www.github.com/eransom1" target="_blank">Ernest Ransom</a>, 
          <a class="link" href="https://www.github.com/mpityo" target="_blank">Matt Pityo</a>
        </p>
        <p>&COPY;2022</p>
        </div>
      </footer>

    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}

  </body>

</html>